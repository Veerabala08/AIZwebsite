--- 
import { Picture } from 'astro:assets'; 


const {heroImg, HeroHeading, HeroText} = Astro.props;
---

<div class="container-fluid px-0">
    <div class="container col-xxl-8 px-4 py-2 ">
        <div class="row flex-column-reverse flex-lg-row-reverse align-items-center justify-content-center g-5 py-5" style="padding-bottom: 0px;">
            <div class="col-10 col-sm-8 col-lg-6">
                <Picture src={heroImg} alt="Bootstrap Themes" class="d-block mx-lg-auto img-fluid" width="700" height="500" loading="lazy">
            </div>
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold lh-1 mb-3">{HeroHeading}</h1>
                <p class="lead">{HeroText}</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button type="button" class="btn btn-lg px-5 me-md-2 button">Get Started</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container-fluid {
        background: linear-gradient(to top, #ffffff, #fe6601); /* Gradient from light blue to white */
        padding-bottom: 0px;
    }
    .container {
        padding-bottom: 0px;
    }
    .button {
        background-color: #0049d3; !important;
        color: white; !important;
    }
</style>