---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import HeroImage from "../assets/hero-img.png";
import Card from "../components/Card.astro";
import Applications from "../assets/Applications.jpg";

const ServiceDetails = {
  heroImg: HeroImage,
  HeroHeading: "Technology Services and Solutions",
  HeroText:
    "We provide innovative solutions to help businesses thrive in the digital age.",
};
const cardText = "This is a reusable Astro card component. It can be used to display images and text in a card format. You can customize the image source, alt text, and card text as needed.";
---

<Layout>
  <Hero
    heroImg={ServiceDetails.heroImg}
    HeroHeading={ServiceDetails.HeroHeading}
    HeroText={ServiceDetails.HeroText}
  />
  <div class="container">
    <h3 class="fs-1 fw-600 p-0 pt-2 m-0 mb-2 text-center">Solutions You Can Trust</h3>
    <p class="opacity-75 w-75 w-sm-100 mx-auto text-center">Trusted solutions for seamless business transformation</p>
	<div class="row align-items-center  justify-content-between pt-4 pb-0 py-0 pb-0 pb-sm-0">
		<Card imgSrc={Applications} imgAlt="Example Image" text={cardText} />
		<Card imgSrc={Applications} imgAlt="Example Image" text={cardText} />
		<Card imgSrc={Applications} imgAlt="Example Image" text={cardText} />
		<Card imgSrc={Applications} imgAlt="Example Image" text={cardText} />
		<Card imgSrc={Applications} imgAlt="Example Image" text={cardText} />
	  </div>
</div>
  
</Layout>