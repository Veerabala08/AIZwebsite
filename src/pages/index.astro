---
import Layout from "../layouts/Layout.astro";
//Components
import Hero from "../components/Hero.astro";
import Stats from "../components/Stats.astro";
//Assets
import HeroImage from '../assets/hero-img.png'; 

const HeroDetails = {
  heroImg: HeroImage,
  HeroHeading: "Empowering Businesses with Cutting-Edge Technology Solutions",
  HeroText: "We provide innovative solutions to help businesses thrive in the digital age.",
};
const cardText = "This is a reusable Astro card component. It can be used to display images and text in a card format. You can customize the image source, alt text, and card text as needed.";
---

<Layout>
  <Hero 
  heroImg={HeroDetails.heroImg}
  HeroHeading={HeroDetails.HeroHeading}
  HeroText={HeroDetails.HeroText}
   />
  <Stats />
</Layout>
